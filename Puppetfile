    :git => 'https://github.com/SilexConsulting/puppet-jenkins.git'

mod 'mysql',
    :git => 'https://github.com/SilexConsulting/puppetlabs-mysql.git'

mod 'stdlib',
    :git => 'https://github.com/SilexConsulting/puppetlabs-stdlib.git',
    :ref => '3.2.1'

